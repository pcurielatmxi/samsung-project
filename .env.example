# ============================================================================
# ETL Pipeline Configuration
# ============================================================================

# Logging
LOG_LEVEL=INFO

# ============================================================================
# ProjectSight Configuration (Trimble)
# ============================================================================
PROJECTSIGHT_BASE_URL=https://projectsight.trimble.com
PROJECTSIGHT_USERNAME=your_username
PROJECTSIGHT_PASSWORD=your_password
PROJECTSIGHT_TIMEOUT=30
PROJECTSIGHT_HEADLESS=true
PROJECTSIGHT_DATA_FIELDS=project_id,project_name,status,start_date,end_date

# Login Configuration
PROJECTSIGHT_LOGIN_URL=https://projectsight.trimble.com/login
PROJECTSIGHT_SESSION_VALIDITY_DAYS=30

# Selectors (customize based on ProjectSight login page)
PROJECTSIGHT_SELECTOR_USERNAME=input[name="username"]
PROJECTSIGHT_SELECTOR_PASSWORD=input[name="password"]
PROJECTSIGHT_SELECTOR_SUBMIT=button[type="submit"]
PROJECTSIGHT_SELECTOR_MFA_INPUT=input[name="mfa_code"]
PROJECTSIGHT_SELECTOR_HOME_INDICATOR=.dashboard

# ============================================================================
# Fieldwire Configuration
# ============================================================================
FIELDWIRE_BASE_URL=https://api.fieldwire.com
FIELDWIRE_API_KEY=your_api_key_here
FIELDWIRE_TIMEOUT=30
FIELDWIRE_RETRY_ATTEMPTS=3
FIELDWIRE_RETRY_DELAY=5
FIELDWIRE_BATCH_SIZE=100

# ============================================================================
# Database Configuration
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=etl_db
DB_USER=airflow
DB_PASSWORD=airflow

# ============================================================================
# Airflow Configuration
# ============================================================================
AIRFLOW_HOME=/opt/airflow
